@{
    ViewBag.Title = "ConnectDevice";
}

<h2>ConnectDevice</h2>
<div>
    <form name="SetDevice" method="post">
        <table>
            <tr>
                <td>
                    <label for="Device">Måler enhed</label>
                </td>
                <td>
                    <select id="DeviceSelection" name="DeviceSelection">
                        <option disabled="disabled">---Not Connected----</option>
                        @foreach (var item in ViewBag.Devices)
                    {
                        if (item.PatientID == null)
                        {
                                <option  value="@item.ID">@item.ID</option>
                        }
                    }
                        <option disabled="disabled">---Connected!--------</option>
                        @foreach (var item in ViewBag.Devices)
                    {
                        if (item.PatientID != null)
                        {
                                <option value="@item.ID">@item.ID</option>
                        }
                    }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="Patient">Vælg Patient</label>
                </td>
                <td>
                    <select class="input-group-sm" id="PatientSelection" name="PatientSelection">
                        @foreach(var item in ViewBag.Patients)
                    {
                            <option value="@item.ID">@item.ForName @item.SurName</option>
                    }
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="ConnectDevice" formmethod="post" />
                </td>
            </tr>
        </table>
    </form>
</div>
